{
  "manifest_version": 3,
  "name": "ArtBrother",
  "version": "1.18",
  "description": "Analyzes colors, gradients, fonts on web pages. v1.18 - White color fix, balanced palette.",
  "permissions": [
    "activeTab",
    "scripting",
    "downloads"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  }
}