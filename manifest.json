{
  "manifest_version": 3,
  "name": "ArtBro",
  "version": "1.0",
  "description": "Analyzes color palettes, gradients, and fonts on web pages.",
  "permissions": [
    "activeTab",
    "scripting" // Додано для ін’єкції
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"],
      "run_at": "document_end"
    }
  ]
}